.main__mainWrap
  .main__mainWrap__userName
    = message.user.name
  .main__mainWrap__date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
    - groupId = message.group.id
    - messageId = message.id
%div(class="main__messages" data-messageid=messageId)
  %p
    = message.content
  = image_tag message.image.url if message.image.present?